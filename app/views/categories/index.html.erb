<div class='default-font'>
  <nav class="navbar self-nav">
    <span></span>
    <span class="has-text-white is-size-4">CATEGORIES</span><br>
    <%= button_to "sign out", destroy_user_session_path, class:'form-submit has-text-white is-size-7', method: :delete %>
  </nav>
            <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
  <ul>
    <% if @categories.empty? %>
      <div>
        No categories for now
      </div>
    <% else %>
      <% @categories.each do |category| %>
        <%= render partial: 'category', locals: { category: category } %> 
      <% end %>
    <% end %>
  </ul>

  <footer class=''>
    <%= link_to 'ADD NEW CATEGORY', new_category_path, class: 'buttons has-text-white has-text-weight-medium' %>
  </footer>
</div>