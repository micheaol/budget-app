<div class='default-font'>
  <nav class="navbar">
    <span></span>
    <span class="login-title">CATEGORIES</span><br>
    <%= button_to "sign out", destroy_user_session_path, class:'login-self', method: :delete %>
  </nav>
            <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
  <ul class='container'>
    <% if @categories.empty? %>
      <div>
        No categories for now
      </div>
    <% else %>
      <% @categories.each do |category| %>
        <%= render partial: 'category', locals: { category: category } %> 
      <% end %>
    <% end %>
  </ul>

  <footer type="button" class="btn btn-lg btn-block add-color-btn">
    <%= link_to 'ADD NEW CATEGORY', new_category_path, class: 'buttons has-text-white has-text-weight-medium' %>
  </footer>
</div>