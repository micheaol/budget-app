<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <nav class='navbar'>
    <%= link_to '', root_path, class: "has-text-white fa fa-arrow-left fa-lg" %>
    <div>
      <h2 class="login-title">REGISTER</h2>
    </div>
    <div>
      <%= f.submit "Next", class:'login-self' %>
    </div>
  </nav>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class='container-fluid input-group mb-3 contain-self'>
      <div class="field">
    <%= f.text_field :name, placeholder: "Full Name", class: "form-control mb-1", required: true %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control mb-1", required: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control mb-1", required: true %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "form-control mb-1", required: true %>
  </div>
  </div>

<% end %>